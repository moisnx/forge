{
  "scripts": {
    "build": "bun run build:css && forge build",
    "dev": "forge dev && bun run watch:css",
    "serve": "forge serve",
    "watch:css": "bunx @tailwindcss/cli -i ./static/styles.css -o ./static/build.css --watch",
    "build:css": "bunx @tailwindcss/cli -i ./static/styles.css -o ./static/build.css --minify"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0"
  }
}